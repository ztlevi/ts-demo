{
  "name": "ts-demo",
  "version": "1.0.0",
  "description": "",
  "source": "src/index.html",
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "scripts": {
    "build": "parcel build --no-source-maps",
    "test": "jest --verbose --runInBand --detectOpenHandles --forceExit --projects -c=config/jest.unittest.config.js",
    "testdev": "jest --verbose --runInBand --detectOpenHandles --forceExit --projects -c=jest.config.js",
    "start": "parcel --dist-dir build",
    "clean": "rm -rf node_modules .parcel-cache build dist",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "tsc --noEmit",
      "npx prettier --write",
      "npx tslint --fix --format codeFrame"
    ],
    "**/*.{md,json,html,css,scss,less,yaml}": [
      "npx prettier --write"
    ]
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^18.0.0"
  },
  "devDependencies": {
    "@parcel/transformer-sass": "^2.6.2",
    "@types/jest": "^28.1.3",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "lint-staged": "^13.0.2",
    "parcel": "^2.6.2",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^28.0.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.7.4",
    "typescript-language-server": "^0.11.1"
  }
}
